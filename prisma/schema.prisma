generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Soci {
  sociId     Int            @id @default(autoincrement())
  nom        String
  cognoms    String
  dni        String         @db.VarChar(9)
  email      String?
  actiu      Boolean        @default(true)
  dataAlta   DateTime       @default(now())
  comissions ComissioSoci[]
}

model Quota {
  quotaId Int    @id @default(autoincrement())
  quota   String
}

model QuotaSoci {
  quotaSociId Int    @id @default(autoincrement())
  sociId      Int
  quotaId     Int
  quantitat   Int
  iban        String @db.VarChar(24)
}

model Comissio {
  comissioId Int    @id @default(autoincrement())
  comissio   String
}

model ComissioSoci {
  comissioSocisId Int  @id @default(autoincrement())
  comissioId      Int
  sociId          Int
  sociComissio    Soci @relation(fields: [sociId], references: [sociId])
}

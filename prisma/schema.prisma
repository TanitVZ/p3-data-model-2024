generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Soci {
  sociId      Int            @id @default(autoincrement())
  nom         String
  cognoms     String
  dni         String         @db.VarChar(9)
  email       String?
  actiu       Boolean        @default(true)
  dataAlta    DateTime       @default(now())
  comissions  ComissioSoci[]
  quotaSoci   QuotaSoci      @relation(fields: [quotaSociId], references: [quotaSociId])
  quotaSociId Int
}

model Quota {
  quotaId   Int         @id @default(autoincrement())
  desc      String      
  quotaSoci QuotaSoci[]
}

model QuotaSoci {
  quotaSociId Int    @id @default(autoincrement())
  sociId      Int    
  quotaId     Int    @unique
  quantitat   Int
  iban        String @db.VarChar(24)
  quota       Quota  @relation(fields: [quotaId], references: [quotaId])
  soci Soci[]
}

model Comissio {
  comissioId Int    @id @default(autoincrement())
  desc       String 
}

model ComissioSoci {
  comissioSocisId Int  @id @default(autoincrement())
  comissioId      Int
  sociId          Int
  sociComissio    Soci @relation(fields: [sociId], references: [sociId])
}
